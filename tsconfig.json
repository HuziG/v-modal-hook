{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["packages/*"],
      "./*": ["./*"],
      "v-modal-hook": ["packages/index.ts"]
    }
  },
  "include": [
    "packages/**/*",
    "playground/**/*",
    "docs/**/*",
    "types",
    "*.ts",
    "*.tsx",
    "*.vue",
    "*.d.ts",
    "*.md"
  ],
  "exclude": ["dist", "node_modules"]
}
